{
  "name": "craft_site_api",
  "description": "Develop part of the API needed for a product page for a craft site",
  "version": "1.0.0",
  "main": "src/server.js",
  "scripts": {
    "start": "nodemon --exec babel-node src/server.js",
    "start:prod": "npm run migrate && node --require @babel/register src/server.js",
    "test": "jest",
    "prepare": "husky install",
    "lint": "eslint --ext js",
    "postinstall": "husky install",
    "test-all": "yarn format && yarn check-format && yarn check-lint",
    "format": "prettier --write .",
    "check-lint": "eslint . --ext js",
    "check-format": "prettier --check .",
    "migrate": "npx prisma migrate dev --name craft_site_api",
    "migratedeploy": "npx prisma migrate deploy",
    "makemigrations": "npx prisma migrate dev --create-only",
    "pull": "npx prisma db pull",
    "generate": "npx prisma generate",
    "studio": "npx prisma studio",
    "formatSchema": "npx prisma format"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.21.3",
    "@babel/node": "^7.20.7",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "eslint": "^8.36.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "prettier": "^2.8.6",
    "prisma": "3.15.2",
    "supertest": "^6.3.3"
  },
  "dependencies": {
    "@prisma/client": "3.15.2",
    "@sendgrid/mail": "^7.7.0",
    "axios": "^1.3.4",
    "babel-plugin-module-resolver": "^5.0.0",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "fs": "0.0.1-security",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.22",
    "swagger-ui-express": "^4.6.2"
  }
}
